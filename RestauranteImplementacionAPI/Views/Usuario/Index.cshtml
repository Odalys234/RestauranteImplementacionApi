@model IEnumerable<Usuario>

<h2 class="text-center my-4">Usuarios</h2>
<div class="text-right mb-3">
    <a class="btn btn-dark" style="background-color: #FF8C00; border-color: #FF8C00; color: #000;" href="@Url.Action("Create", "Usuario")">
        <i class="fa fa-plus-circle"></i> Crear Nuevo Usuario
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered shadow-lg">
        <thead style="background-color: #FF8C00; color: #000;">
            <tr>
                <th scope="col" class="text-center">Username</th>
                <th scope="col" class="text-center">Role</th>
                <th scope="col" class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var usuario in Model)
        {
            <tr>
                <td class="align-middle text-center">@usuario.Username</td>
                <td class="align-middle text-center">@usuario.Role</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF4500; color: #FF4500;" href="@Url.Action("Details", "Usuario", new { id = usuario.Id })">
                         <i class="fa fa-eye"></i> Detalles
                    </a>
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF8C00; color: #FF8C00;" href="@Url.Action("Edit", "Usuario", new { id = usuario.Id })">
                        <i class="fa fa-pencil-square-o"></i> Modificar
                    </a>
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF4500; color: #FF4500;" href="@Url.Action("Delete", "Usuario", new { id = usuario.Id })">
                        <i class="fa fa-trash-o"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
