@model Reserva

<h2 class="text-center my-4" style="color: #FF4500;">Crear Reserva</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4" style="border: 1px solid #FF4500; border-radius: 10px;">
            <form asp-action="Create">
                <input type="hidden" asp-for="id" />

                <div class="form-group">
                    <label asp-for="clienteId" class="control-label" style="color: #FF4500; font-weight: bold;">Cliente ID</label>
                    <input asp-for="clienteId" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el ID del cliente" />
                    <span asp-validation-for="clienteId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="fechaReserva" class="control-label" style="color: #FF4500; font-weight: bold;">Fecha de Reserva</label>
                    <input asp-for="fechaReserva" class="form-control" style="border: 1px solid #FF4500;" type="date" />
                    <span asp-validation-for="fechaReserva" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="horaReserva" class="control-label" style="color: #FF4500; font-weight: bold;">Hora de Reserva</label>
                    <input asp-for="horaReserva" class="form-control" style="border: 1px solid #FF4500;" type="time" />
                    <span asp-validation-for="horaReserva" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="numeroPersonas" class="control-label" style="color: #FF4500; font-weight: bold;">Número de Personas</label>
                    <input asp-for="numeroPersonas" class="form-control" style="border: 1px solid #FF4500;" type="number" min="1" placeholder="Ingrese el número de personas" />
                    <span asp-validation-for="numeroPersonas" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="mesaAsignada" class="control-label" style="color: #FF4500; font-weight: bold;">Mesa Asignada</label>
                    <input asp-for="mesaAsignada" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese la mesa asignada" />
                    <span asp-validation-for="mesaAsignada" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button id = "button" type="submit" class="btn btn-dark mx-2" style="background-color: #FF4500; border-color: #FF4500; color: white; width: 150px;">
                        Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-dark mx-2" style="border-color: #FF4500; color: #FF4500; width: 150px;">
                        Volver a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
