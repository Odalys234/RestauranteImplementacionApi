@model IEnumerable<Platillo>

<h2 class="text-center my-4">Platillos</h2>
<div class="text-right mb-3">
    <a class="btn btn-dark" style="background-color: #FF8C00; border-color: #FF8C00; color: #000;" href="@Url.Action("Create", "Platillo")">
        <i class="fa fa-plus-circle"></i> Crear Nuevo Platillo
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered shadow-lg">
        <thead style="background-color: #FF8C00; color: #000;">
            <tr>
                <th scope="col" class="text-center">Nombre</th>
                <th scope="col" class="text-center">Descripción</th>
                <th scope="col" class="text-center">Precio</th>
                <th scope="col" class="text-center">Categoría</th>
                <th scope="col" class="text-center">Imagen</th>
                <th scope="col" class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var platillo in Model)
        {
            <tr>
                <td class="align-middle text-center">@platillo.nombrePlatillo</td>
                <td class="align-middle text-center">@platillo.descripcion</td>
                <td class="align-middle text-center">$@platillo.precio.ToString("F2")</td>
                <td class="align-middle text-center">@platillo.categoriaId</td>
                <td class="align-middle text-center">
                    <!-- Mostrar la imagen usando la URL almacenada -->
                    <img src="@platillo.imagen" alt="Imagen de @platillo.nombrePlatillo" style="max-width: 100px;" />
                </td>
                <td class="text-center">
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF4500; color: #FF4500;" href="@Url.Action("Details", "Platillo", new { id = platillo.id })">
                        <i class="fa fa-eye"></i> Detalles
                    </a>
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF8C00; color: #FF8C00;" href="@Url.Action("Edit", "Platillo", new { id = platillo.id })">
                        <i class="fa fa-pencil-square-o"></i> Modificar
                    </a>
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF4500; color: #FF4500;" href="@Url.Action("Delete", "Platillo", new { id = platillo.id })">
                        <i class="fa fa-trash-o"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
