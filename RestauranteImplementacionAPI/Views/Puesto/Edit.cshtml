@model Puesto
<h2 class="text-center my-4" style="color: #FF4500;">Editar Puesto</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4" style="border: 1px solid #FF4500; border-radius: 10px;">
            <form asp-action="Edit">
                <input type="hidden" asp-for="id" />
                
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label" style="color: #FF4500; font-weight: bold;">Nombre</label>
                    <input asp-for="Nombre" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el nombre de el Puesto" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label" style="color: #FF4500; font-weight: bold;">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" style="border: 1px solid #FF4500;" rows="3" placeholder="Ingrese la descripción de el Puesto"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                
                <div class="form-group text-center mt-4 d-flex justify-content-between">
                    <input type="submit" value="Guardar" class="btn btn-dark" style="background-color: #FF4500; border-color: #FF4500; color: white; width: 150px;" />
                    <a asp-action="Index" class="btn btn-outline-dark" style="border-color: #FF4500; color: #FF4500; width: 150px;">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
