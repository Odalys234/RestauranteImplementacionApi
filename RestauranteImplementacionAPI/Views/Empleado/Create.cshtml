@model Empleado

<h2 class="text-center my-4" style="color: #FF4500;">Crear Empleado</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4" style="border: 1px solid #FF4500; border-radius: 10px;">
            <form asp-action="Create">
                <input type="hidden" asp-for="id" />

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label" style="color: #FF4500; font-weight: bold;">Nombre</label>
                    <input asp-for="Nombre" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el nombre del empleado" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Apellido" class="control-label" style="color: #FF4500; font-weight: bold;">Apellido</label>
                    <input asp-for="Apellido" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el apellido del empleado" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefono" class="control-label" style="color: #FF4500; font-weight: bold;">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el teléfono del empleado" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label" style="color: #FF4500; font-weight: bold;">Email</label>
                    <input asp-for="Email" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el email del empleado" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PuestoId" class="control-label" style="color: #FF4500; font-weight: bold;">Puesto</label>
                    <input asp-for="PuestoId" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el ID del puesto" />
                    <span asp-validation-for="PuestoId" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button  id = "button" type="submit" class="btn btn-dark mx-2" style="background-color: #FF4500; border-color: #FF4500; color: white; width: 150px;">
                        Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-dark mx-2" style="border-color: #FF4500; color: #FF4500; width: 150px;">
                        Volver a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
