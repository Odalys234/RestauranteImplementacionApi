@model IEnumerable<Categoria>

<h2 class="text-center my-4">Categorías</h2>
<div class="text-right mb-3">
    <a class="btn btn-dark" style="background-color: #FF8C00; border-color: #FF8C00; color: #000;" href="@Url.Action("Create", "Categoria")">
        <i class="fa fa-plus-circle"></i> Crear Nueva Categoría
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered shadow-lg">
        <thead style="background-color: #FF8C00; color: #000;">
            <tr>
                <th scope="col" class="text-center">Nombre</th>
                <th scope="col" class="text-center">Descripción</th>
                <th scope="col" class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var categoria in Model)
        {
            <tr>
                <td class="align-middle text-center">@categoria.nombre</td>
                <td class="align-middle">@categoria.descripcion</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF4500; color: #FF4500;" href="@Url.Action("Details","Categoria", new { id = categoria.id })">
                         <i class="fa fa-eye"></i> Detalles
                    </a>
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF8C00; color: #FF8C00;" href="@Url.Action("Edit","Categoria", new { id = categoria.id })">
                        <i class="fa fa-pencil-square-o"></i> Modificar
                    </a>
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF4500; color: #FF4500;" href="@Url.Action("Delete","Categoria", new { id = categoria.id })">
                        <i class="fa fa-trash-o"></i> Eliminar
                    </a>
                    

                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
