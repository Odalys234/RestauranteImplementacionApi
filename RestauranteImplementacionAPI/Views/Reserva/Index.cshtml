@model IEnumerable<Reserva>

<h2 class="text-center my-4">Reservas</h2>
<div class="text-right mb-3">
    <a class="btn btn-dark" style="background-color: #FF8C00; border-color: #FF8C00; color: #000;" href="@Url.Action("Create", "Reserva")">
        <i class="fa fa-plus-circle"></i> Crear Nueva Reserva
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered shadow-lg">
        <thead style="background-color: #FF8C00; color: #000;">
            <tr>
                <th scope="col" class="text-center">Cliente ID</th>
                <th scope="col" class="text-center">Fecha Reserva</th>
                <th scope="col" class="text-center">Hora Reserva</th>
                <th scope="col" class="text-center">Número Personas</th>
                <th scope="col" class="text-center">Mesa Asignada</th>
                <th scope="col" class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var reserva in Model)
        {
            <tr>
                <td class="align-middle text-center">@reserva.clienteId</td>
                <td class="align-middle text-center">@reserva.fechaReserva.ToString("yyyy-MM-dd")</td>
                <td class="align-middle text-center">@reserva.horaReserva.ToString("hh\\:mm")</td>
                <td class="align-middle text-center">@reserva.numeroPersonas</td>
                <td class="align-middle text-center">@reserva.mesaAsignada</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF4500; color: #FF4500;" href="@Url.Action("Details", "Reserva", new { id = reserva.id })">
                        <i class="fa fa-eye"></i> Detalles
                    </a>
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF8C00; color: #FF8C00;" href="@Url.Action("Edit", "Reserva", new { id = reserva.id })">
                        <i class="fa fa-pencil-square-o"></i> Modificar
                    </a>
                    <a class="btn btn-sm btn-outline-dark mx-1" style="border-color: #FF4500; color: #FF4500;" href="@Url.Action("Delete", "Reserva", new { id = reserva.id })">
                        <i class="fa fa-trash-o"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
