@model Cliente

<h2 class="text-center my-4" style="color: #FF4500;">Crear Cliente</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4" style="border: 1px solid #FF4500; border-radius: 10px;">
            <form asp-action="Create">
                <input type="hidden" asp-for="id" />

                <div class="form-group">
                    <label asp-for="nombre" class="control-label" style="color: #FF4500; font-weight: bold;">Nombre</label>
                    <input asp-for="nombre" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el nombre del cliente" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="apellido" class="control-label" style="color: #FF4500; font-weight: bold;">Apellido</label>
                    <input asp-for="apellido" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el apellido del cliente" />
                    <span asp-validation-for="apellido" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="telefono" class="control-label" style="color: #FF4500; font-weight: bold;">Teléfono</label>
                    <input asp-for="telefono" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el teléfono del cliente" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="email" class="control-label" style="color: #FF4500; font-weight: bold;">Email</label>
                    <input asp-for="email" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el email del cliente" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-dark mx-2" style="background-color: #FF4500; border-color: #FF4500; color: white; width: 150px;">
                        Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-dark mx-2" style="border-color: #FF4500; color: #FF4500; width: 150px;">
                        Volver a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
