@model Categoria

<h2 class="text-center my-4" style="color: #FF4500;">Crear Categoría</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4" style="border: 1px solid #FF4500; border-radius: 10px;">
            <form asp-action="Create">
                <input type="hidden" asp-for="id" />

                <div class="form-group">
                    <label asp-for="nombre" class="control-label" style="color: #FF4500; font-weight: bold;">Nombre</label>
                    <input asp-for="nombre" class="form-control" style="border: 1px solid #FF4500;" placeholder="Ingrese el nombre de la categoría" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="descripcion" class="control-label" style="color: #FF4500; font-weight: bold;">Descripción</label>
                    <textarea asp-for="descripcion" class="form-control" style="border: 1px solid #FF4500;" rows="3" placeholder="Ingrese la descripción de la categoría"></textarea>
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button id = "button"  type="submit" class="btn btn-dark mx-2" style="background-color: #FF4500; border-color: #FF4500; color: white; width: 150px;">
                        Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-dark mx-2" style="border-color: #FF4500; color: #FF4500; width: 150px;">
                        Volver a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
